<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Crna">
    
    <TextView
        android:id="@+id/kraj"
        style="@style/Crna"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Slovenija / jugozahod" />
    
    <TextView
        style="@style/Crna"
        android:id="@+id/danes"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kraj"
        tools:text="danes vreme\nneki" />
    
    <TextView
        style="@style/Crna"
        android:id="@+id/jutri"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/danes"
        tools:text="jutri\nneki" />
    
    <TextView
        style="@style/Crna"
        android:id="@+id/cez2dni"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jutri"
        tools:text="pojustrinjem\nneki" />
    
    <TextView
        style="@style/Crna"
        android:id="@+id/cez3dni"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cez2dni"
        tools:text="cez 3 dni\nneki" />
    
    <TextView
        style="@style/Crna"
        android:id="@+id/danes2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:gravity="center_vertical"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/danes"
        app:layout_constraintEnd_toStartOf="@+id/danes_ikona"
        app:layout_constraintTop_toTopOf="@+id/danes"
        tools:text="20" />
    
    <TextView
        style="@style/Crna"
        android:id="@+id/jutri2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:gravity="center_vertical"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/jutri"
        app:layout_constraintEnd_toStartOf="@+id/jutri_ikona"
        app:layout_constraintTop_toTopOf="@+id/jutri"
        tools:text="20" />
    
    <TextView
        style="@style/Crna"
        android:id="@+id/cez2dni2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:gravity="center_vertical"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/cez2dni"
        app:layout_constraintEnd_toStartOf="@+id/cez2dni_ikona"
        app:layout_constraintTop_toTopOf="@+id/cez2dni"
        tools:text="20" />
    
    <TextView
        style="@style/Crna"
        android:id="@+id/cez3dni2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:gravity="center_vertical"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/cez3dni"
        app:layout_constraintEnd_toStartOf="@+id/cez3dni_ikona"
        app:layout_constraintTop_toTopOf="@+id/cez3dni"
        tools:text="20" />
    
    <ImageView
        style="@style/Crna"
        android:id="@+id/danes_ikona"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/danes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/danes"
        app:layout_optimizationLevel="dimensions"
        app:srcCompat="@drawable/ic_zmerno_oblacno" />
    
    <ImageView
        style="@style/Crna"
        android:id="@+id/jutri_ikona"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/jutri"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/jutri"
        app:layout_optimizationLevel="dimensions"
        app:srcCompat="@drawable/ic_zmerno_oblacno" />
    
    <ImageView
        style="@style/Crna"
        android:id="@+id/cez2dni_ikona"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/cez2dni"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cez2dni"
        app:srcCompat="@drawable/ic_zmerno_oblacno" />
    
    <ImageView
        style="@style/Crna"
        android:id="@+id/cez3dni_ikona"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/cez3dni"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cez3dni"
        app:srcCompat="@drawable/ic_zmerno_oblacno" />


</android.support.constraint.ConstraintLayout>